<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="theme_color">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppBaseTheme" parent="BaseTheme.Light">
        <!--<item name="android:selectableItemBackground">@drawable/selector_list_holo</item>-->
    </style>

    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">?attr/theme_color</item>
        <!-- Status bar color-->
        <item name="colorPrimaryDark">?attr/theme_color</item>
        <item name="colorAccent">?attr/theme_color</item>

        <!--<item name="flat_text">@drawable/md_btn_selector</item>-->

        <item name="theme_background">?attr/theme_color</item>

        <item name="fits_windows">false</item>

        <item name="text_title">@color/text_100</item>
        <item name="text_subhead">@color/text_54</item>
        <item name="text_body">@color/text_80</item>

        <!--<item name="divider_timeline_item">@color/divider</item>-->
        <!--<item name="bg_timline_item">@drawable/timeline_publish_single_normal</item>-->

        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">16dp</item>
        <item name="contentInsetEnd">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Profile">
    </style>
</resources>